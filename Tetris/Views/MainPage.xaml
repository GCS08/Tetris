<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tetris.ViewModels"
             xmlns:m="clr-namespace:Tetris.Models"
             x:Class="Tetris.Views.MainPage"
             x:DataType="vm:MainPageVM">

    <Grid>
        <!-- Background Image -->
        <Image Source="background.png"
               Aspect="AspectFill"
               Grid.RowSpan="1"
               Grid.ColumnSpan="1"/>

        <!-- Main Content -->
        <ScrollView>
            <VerticalStackLayout
                Padding="30,30"
                Spacing="25">
                <Label
                    Text="{Binding WelcomeUserName}"
                    HorizontalOptions="Center"
                    TextColor="White"
                    FontSize="40"
                    HorizontalTextAlignment="Center"/>
                <Button
                    IsVisible="{Binding LoginVisibility}"
                    Text="{x:Static m:Strings.LoginOrRegisterButton}"
                    BorderColor="Blue"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Command="{Binding NavToLoginCommand}"/>
                <Button
                    IsVisible="{Binding SignOutVisibility}"
                    Text="{x:Static m:Strings.SignOutButton}"
                    BorderColor="Blue"
                    BorderWidth="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Command="{Binding SignOutCommand}"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
