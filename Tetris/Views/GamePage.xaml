<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tetris.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Tetris.Models"
    xmlns:vm="clr-namespace:Tetris.ViewModels"
    x:DataType="vm:GamePageVM"
    Shell.NavBarIsVisible="False">

    <Grid>
        <!--  Background Image  -->
        <Image Aspect="AspectFill" Source="gameBackground.png" />

        <!--  Main Content  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{Binding UserScreenHeight}" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <BoxView
                Grid.Row="1"
                Grid.ColumnSpan="2"
                BackgroundColor="White"
                HeightRequest="1" />

            <!--  Game Board Grid  -->
            <Frame
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <Grid BackgroundColor="Black" HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid
                        x:Name="GameBoardGrid"
                        Grid.Row="0"
                        BackgroundColor="Navy"
                        HorizontalOptions="Center"
                        VerticalOptions="Start" />
                    <Grid HeightRequest="100" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Margin="5"
                            Text="right" />
                        <Button
                            Grid.Column="1"
                            Margin="5"
                            Text="rotate" />
                        <Button
                            Grid.Column="2"
                            Margin="5"
                            Text="left" />
                        <Button
                            Grid.Column="1"
                            Grid.Row="1"
                            Margin="5"
                            Text="down" />
                    </Grid>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
