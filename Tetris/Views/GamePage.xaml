<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tetris.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Tetris.Models"
    xmlns:vm="clr-namespace:Tetris.ViewModels"
    x:DataType="vm:GamePageVM"
    Shell.NavBarIsVisible="False">

    <Grid>
        <!--  Background Image  -->
        <Image Aspect="AspectFill" Source="gameBackground.png" />

        <!--  Main Content  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{Binding UserScreenHeight}" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <BoxView
                Grid.Row="1"
                Grid.ColumnSpan="2"
                BackgroundColor="White"
                HeightRequest="1" />
            <Grid
                x:Name="GameBoardYes"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="20"
                BackgroundColor="Black"
                ColumnDefinitions="{Binding ColumnDefinitions}"
                RowDefinitions="{Binding RowDefinitions}" />
        </Grid>
    </Grid>
</ContentPage>