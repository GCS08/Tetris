<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tetris.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tetris"
    xmlns:v="clr-namespace:Tetris.Views"
    Title="Tetris"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate v:MainPage}" Route="MainPage" />
    <ShellContent ContentTemplate="{DataTemplate v:LoginPage}" Route="LoginPage" />
    <ShellContent ContentTemplate="{DataTemplate v:RegisterPage}" Route="RegisterPage" />
    <ShellContent ContentTemplate="{DataTemplate v:PlayPage}" Route="PlayPage" />
    <ShellContent ContentTemplate="{DataTemplate v:GamePage}" Route="GamePage" />
    <ShellContent ContentTemplate="{DataTemplate v:NewGameConfigPage}" Route="NewGameConfigPage" />
</Shell>
