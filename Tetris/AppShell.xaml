<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tetris.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tetris"
    xmlns:v="clr-namespace:Tetris.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Tetris">

    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate v:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate v:RegisterPage}" />

</Shell>
